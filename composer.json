{
    "name": "root/app",
    "type": "project",
    "require": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-phpunit": "^1.1",
        "friendsofphp/php-cs-fixer": "^3.11",
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix --verbose --diff",
        "phpstan": "phpstan analyze --no-progress --memory-limit=-1",
        "test": "vendor/bin/phpunit tests"
    }
}
